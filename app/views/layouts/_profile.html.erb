 <div class="col tweet-stats-col">
            <p>
                <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar , class: "m-profile-pic", alt: "profile-picture" %> 
                <% else %>
                <%= image_tag gravatar_image_url(current_user.email, size:40), class: 'm-profile-pic' %>
                <% end %>
            </p>
            <p class="user-fullname"><%= current_user.name %> <i class="fas fa-check-circle"></i></p>
            <p class="user-username">@<%= current_user.username %> </p> 
            <p class="user-location"><i class="fas fa-map-marker-alt"></i><%= current_user.location %> </p>
            
            <div class="row tweet-stats">
                <div class="stat-col">
                    <p class="tweet-stat-title">Whistles</p>
                    <p class="tweet-stat-number"><%= current_user.opinions.count %></p>
                </div>
                <div class="stat-col">
                    <p class="tweet-stat-title">Followers</p>
                    <p class="tweet-stat-number"><%= @current_user.followers.count %></p>
                </div>
                <div class="stat-col">
                    <p class="tweet-stat-title">Following</p>
                    <p class="tweet-stat-number"><%= @current_user.following.count %></p>
                </div>
            </div> 
        </div>